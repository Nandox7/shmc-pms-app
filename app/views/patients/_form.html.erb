<%= form_for(patient, html: {class: 'form-horizontal'}) do |f| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :firstname, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :firstname, class: 'form-control'  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :lastname, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :lastname, class: 'form-control'  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :dateofbirth, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.date_select :dateofbirth, class: 'form-control'  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :address, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control'  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :contact, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :contact, class: 'form-control'  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :details, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :details, class: 'form-control'  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :special, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :special, class: 'form-control'  %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Update Details', :class => 'btn btn-success' %>
      <%= link_to 'Back', patients_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
