<h1>Patients List</h1>

<div class="container">
	<div class="row">
        <div class="col-sm-4 col-sm-offset-8">
          <div class="form-group pull-right">
            <div id="imaginary_container"> 
              <%= form_tag(patients_path, :method => "get") do %>
                <div class="input-group stylish-input-group">
                      <%= text_field_tag :search, nil, :placeholder => "Search by name...", class: "form-control" %>
                      <span class="input-group-addon">
                        <%= button_tag(type: 'submit', id: 'validForm') do %>
                          <span class="glyphicon glyphicon-search"></span>
                        <% end %>
                      </span>
                </div>
              <% end %>
             </div>
            <div>
          </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date of Birth</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dateofbirth %></td>
        <td><%= patient.contact %></td>
        <td><%= link_to 'Show', patient, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Remove', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-sm-2 col-sm-offset-4">
  <%= link_to 'New Patient', new_patient_path, class: 'btn btn-primary' %>
</div>