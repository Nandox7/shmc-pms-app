<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dateofbirth</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Details</th>
      <th>Special</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dateofbirth %></td>
        <td><%= patient.address %></td>
        <td><%= patient.contact %></td>
        <td><%= patient.details %></td>
        <td><%= patient.special %></td>
        <td><%= link_to 'Show', patient, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class: 'btn btn-success' %>
