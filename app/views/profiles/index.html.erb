<h1>User Profiles</h1>

<div class="container">
	<div class="row">
        <div class="col-sm-4 col-sm-offset-8">
          <div class="form-group pull-right">
            <div id="imaginary_container"> 
              <%= form_tag(profiles_path, :method => "get") do %>
                <div class="input-group stylish-input-group">
                      <%= text_field_tag :search, nil, :placeholder => "Search by name...", class: "form-control" %>
                      <span class="input-group-addon">
                        <%= button_tag(type: 'submit', id: 'validForm') do %>
                          <span class="glyphicon glyphicon-search"></span>
                        <% end %>
                      </span>
                </div>
              <% end %>
             </div>
            <div>
          </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Login</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.user.email %></td>
        <td><%= profile.role %></td>
        <td><%= link_to 'Show', profile, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
