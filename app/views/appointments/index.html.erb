<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Appointmentdate</th>
      <th>Appointmenttime</th>
      <th>Patient</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointmentdate %></td>
        <td><%= appointment.appointmenttime %></td>
        <td><%= appointment.patient %></td>
        <td><%= appointment.profile %></td>
        <td><%= link_to 'Show', appointment, class: 'btn'  %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment), class: 'btn' %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

